{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                            
    "rootDir": "./",
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },                                      
    "resolveJsonModule": true,                       
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true                             
  }
}
